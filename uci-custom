#!/bin/sh
#
# /etc/uci-defaults/99-custom-settings
#

# 修改 LAN 地址为 10.0.0.1
uci set network.lan.ipaddr='10.0.0.1'

# 在 config device 中增加端口 eth2 和 eth3
uci add_list network.lan.device='eth2'
uci add_list network.lan.device='eth3'

# 设置 root 密码为 "password"
# 注意：这里直接写明文会被加密存储
# 使用 openssl passwd -1 'password' 生成 MD5-crypt 哈希
uci set system.@system[0].password='$1$V4UetPzk$CYXluq4wUazHjmCDBCqXF.'

# 保存并提交更改
uci commit network
uci commit system

exit 0
